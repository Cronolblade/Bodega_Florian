<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- El fondo de la pantalla de bienvenida -->
        <item name="windowSplashScreenBackground">@color/white</item> <!-- O el color que prefieras -->

        <!-- El icono que se mostrará en el centro -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/bodega_florian</item>

        <!-- Opcional: Duración del icono en pantalla. No lo hagas muy largo. -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- La pantalla a la que irá la app DESPUÉS de la splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>
</resources>